<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container">
        <a class="navbar-brand" href="#"></a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <div class="mx-auto p-2" style="width: 80px;">
              <a class="btn btn-success nav" href="/ ">Home</a>
              </li>
              <li class="nav-item">
              <div class="mx-auto p-2" style="width: 200px;">
              <a class="btn btn-success" href="/stocks">cek barang</a>
              </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container">
      <h3>Stock yang tersedia</h3>
      <a href="/stocks/submit" class="btn btn-sm btn-primary">+ Add Item</a>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Type</th>
            <th>Quantity</th>
          </tr>
        </thead>
        <tbody>
          <% stock.forEach(stock => { %>
          <tr>
            <td><%= stock.id %></td>
            <td><%= stock.name %></td>
            <td><%= stock.type %></td>
            <td><%= stock.quantity %></td>

            <td>
              <a
                href="/stocks/remove/<%= stock.id%>"
                class="btn btn-sm btn-danger me-2"
                >X Remove</a
              >
              <a href="/stocks/edit/<%=stock.id%>" class="btn btn-sm btn-info"
                >Edit</a
              >
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
